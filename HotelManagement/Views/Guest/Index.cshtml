@model IEnumerable<HotelManagement.Models.Guest>

<h2>Guest List</h2>

<p>
    @Html.ActionLink("Add New Guest", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered table-striped">
    <tr>
        <th>Full Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Room Number</th>
        <th>Price</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FullName</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td>@(item.Room != null ? item.Room.RoomNumber : "N/A")</td>
            <td>@(item.Room != null ? item.Room.PricePerNight.ToString("C") : "N/A")</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.GuestId }) |
                @Html.ActionLink("Details", "Details", new { id = item.GuestId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.GuestId })
            </td>
        </tr>
    }
</table>
