@model HotelManagement.Models.Guest

@{
    ViewBag.Title = "Delete Guest";
}

<h2>Delete Guest</h2>

<h3>Are you sure you want to delete this guest?</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Full Name</dt>
        <dd>@Html.DisplayFor(model => model.FullName)</dd>

        <dt>Email</dt>
        <dd>@Html.DisplayFor(model => model.Email)</dd>

        <dt>Phone</dt>
        <dd>@Html.DisplayFor(model => model.Phone)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.GuestId)

        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", "Guest", null, new { @class = "btn btn-default" })
    }
</div>
