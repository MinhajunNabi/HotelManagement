@model HotelManagement.Models.Room

@{
    ViewBag.Title = "Room Details";
}

<h2>Room Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.RoomNumber)</dt>
        <dd>@Html.DisplayFor(model => model.RoomNumber)</dd>

        <dt>@Html.DisplayNameFor(model => model.Type)</dt>
        <dd>@Html.DisplayFor(model => model.Type)</dd>

        <dt>@Html.DisplayNameFor(model => model.PricePerNight)</dt>
        <dd>@String.Format("{0:C}", Model.PricePerNight)</dd>

        <dt>@Html.DisplayNameFor(model => model.IsAvailable)</dt>
        <dd>@(Model.IsAvailable ? "Yes" : "No")</dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.RoomId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
