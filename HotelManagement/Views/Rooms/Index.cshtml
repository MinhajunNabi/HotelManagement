@model IEnumerable<HotelManagement.Models.Room>

@{
    ViewBag.Title = "Room List";
}

<h2 style="font-size: 32px; color: #2c3e50; margin-bottom: 25px; text-align: center;">🏨 Room List</h2>

<div style="text-align: center; margin-bottom: 20px;">
    @Html.ActionLink("➕ Add New Room", "Create", null, new { @class = "btn btn-success", style = "font-size: 16px; padding: 10px 25px;" })
</div>

<div style="background-color: #f3f9ff; padding: 30px; border-radius: 10px; max-width: 900px; margin: auto; box-shadow: 0 0 8px rgba(0,0,0,0.1);">
    <table class="table table-bordered table-striped" style="font-size: 16px;">
        <thead style="background-color: #dff0ff; color: #2c3e50;">
            <tr>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().RoomNumber)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Type)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().PricePerNight)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().IsAvailable)</th>
                <th style="text-align: center;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.RoomNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.Type)</td>
                    <td>@item.PricePerNight.ToString("C")</td>
                    <td>@(item.IsAvailable ? "✅ Available" : "❌ Booked")</td>
                    <td style="text-align: center;">
                        @Html.ActionLink("✏️ Edit", "Edit", new { id = item.RoomId }, new { @class = "btn btn-sm btn-primary", style = "margin-right: 5px;" })
                        @Html.ActionLink("📄 Details", "Details", new { id = item.RoomId }, new { @class = "btn btn-sm btn-info", style = "margin-right: 5px;" })
                        @Html.ActionLink("🗑️ Delete", "Delete", new { id = item.RoomId }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
