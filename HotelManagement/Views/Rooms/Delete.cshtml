@model HotelManagement.Models.Room

@{
    ViewBag.Title = "Delete Room";
}

<h2>Delete Room</h2>

<h3>Are you sure you want to delete this room?</h3>
<div>
    <h4>Room</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Room Number</dt>
        <dd>@Html.DisplayFor(model => model.RoomNumber)</dd>

        <dt>Type</dt>
        <dd>@Html.DisplayFor(model => model.Type)</dd>

        <dt>Price Per Night</dt>
        <dd>@Html.DisplayFor(model => model.PricePerNight)</dd>

        <dt>Is Available</dt>
        <dd>@Html.DisplayFor(model => model.IsAvailable)</dd>
    </dl>

    @using (Html.BeginForm("Delete", "Rooms", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.RoomId)
        <input type="submit" value="Delete" class="btn btn-danger" /> 
}
</div>
