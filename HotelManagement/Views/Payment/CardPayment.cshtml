@{
    ViewBag.Title = "Card Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="max-width: 600px;">
    <h2 class="mb-4 text-center">Card Payment</h2>

    @using (Html.BeginForm("CardPayment", "Payment", FormMethod.Post))
    {
        @Html.Hidden("orderId", ViewBag.OrderId)

        <div class="form-group mb-3">
            <label>Card Number</label>
            <input type="text" name="CardNumber" class="form-control" placeholder="1234 5678 9012 3456" required />
        </div>
        <div class="form-group mb-3">
            <label>Expiry</label>
            <input type="text" name="Expiry" class="form-control" placeholder="MM/YY" required />
        </div>
        <div class="form-group mb-3">
            <label>CVV</label>
            <input type="password" name="CVV" class="form-control" placeholder="123" required />
        </div>
        <button type="submit" class="btn btn-success w-100">Pay Now</button>
    }
</div>
