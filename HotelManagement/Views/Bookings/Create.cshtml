@model HotelManagement.Models.Booking

@{
    ViewBag.Title = "Book a Room";
}

<div class="container mt-5" style="max-width: 500px;">
    <h2 class="text-center mb-4">Book a Room</h2>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "border p-4 rounded shadow-sm bg-light" }))
    {
        <div class="form-group mb-3">
            @Html.LabelFor(m => m.GuestName, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.GuestName, new { @class = "form-control", placeholder = "Enter guest name" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.RoomType, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.RoomType, new { @class = "form-control", placeholder = "Enter room type" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.CheckIn, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.CheckIn, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        </div>

        <div class="form-group mb-4">
            @Html.LabelFor(m => m.CheckOut, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.CheckOut, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        </div>

        <button type="submit" class="btn btn-primary w-100">Book Now</button>
    }
</div>
