@model HotelManagement.Models.User

@{
    ViewBag.Title = "Sign In";
}

<div class="container mt-5" style="max-width: 400px;">
    <h2 class="text-center mb-4">Sign In</h2>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "border p-4 rounded shadow-sm bg-light" }))
    {
        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Username, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Enter username" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Password, new { @class = "form-label" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter password" })
        </div>

        <button type="submit" class="btn btn-primary w-100">Login</button>
    }

    @if (ViewBag.Message != null)
    {
        <p class="text-danger text-center mt-3">@ViewBag.Message</p>
    }
</div>
